<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/host_standby_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/frame_black"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/join_num"
        app:layout_constraintEnd_toStartOf="@id/host_select_table"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <TextView
        android:id="@+id/join_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参加人数"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_standby_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/host_join_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/join_num"
        app:layout_constraintStart_toEndOf="@+id/join_num"
        android:layout_marginStart="10dp"
        android:textSize="20sp"/>

    <TableLayout
        android:id="@+id/host_select_table"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/host_standby_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TableRow
            android:id="@+id/host_pairing_id_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

            <ImageButton
                android:id="@+id/host_pairing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:src="@drawable/ic_settings_bluetooth_black_24dp"
                android:text="@string/pairing" />

            <TextView
                android:id="@+id/host_user_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:gravity="center"
                android:text="UserID"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:id="@+id/host_spinner_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <Spinner
                android:id="@+id/host_game_rule_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:background="@drawable/frame_black" />
        </TableRow>

        <TableRow
            android:id="@+id/host_item_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:gravity="bottom"
                android:text="課金弾"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:gravity="bottom"
                android:text="アイテム"
                android:textStyle="bold"/>

        </TableRow>
        <TableRow
            android:id="@+id/host_item_btn_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            >

            <ImageButton
                android:id="@+id/host_kakin_bullet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:background="@null"
                app:srcCompat="@drawable/bolg_button_on" />

            <ImageButton
                android:id="@+id/host_item_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:layout_margin="2dp"
                android:background="@null"
                app:srcCompat="@drawable/bolg_button_on" />

        </TableRow>

        <TableRow
            android:id="@+id/host_inventory_item_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/host_item1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:background="@drawable/frame_black"
                android:gravity="center"
                android:text="アイテム1"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/host_item2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:background="@drawable/frame_black"
                android:gravity="center"
                android:text="アイテム2"
                android:textStyle="bold"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/frame_black"
                android:gravity="center"
                android:text="課金弾"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/host_kakin_bullet_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/frame_black"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@drawable/frame_black"
                android:layout_span="1"
                android:text="準備完了"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/host_ready_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/frame_black"
                android:text="0"
                android:textStyle="bold"
                android:layout_span="1"
                android:gravity="center"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/host_inventory_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:layout_margin="2dp"
                android:background="@null"
                app:srcCompat="@drawable/bolg_inventory_on_dark" />
            <ImageButton
                android:id="@+id/host_start_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:layout_margin="2dp"
                android:background="@null"
                app:srcCompat="@drawable/bolg_start_on_dark" />
        </TableRow>

        <TableRow
            android:id="@+id/host_dummy_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy"
                android:visibility="invisible" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy"
                android:visibility="invisible" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy"
                android:visibility="invisible" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy"
                android:visibility="invisible" />
        </TableRow>
    </TableLayout>

    <ProgressBar
        android:id="@+id/host_pairing_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
